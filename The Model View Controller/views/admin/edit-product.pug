extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        form.product-form(action="/admin/" + editing ? "edit-product" : "add-product", method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title" value = editing ? product.title : "" )#title
            .form-control
                label(for="imageUrl") Image URL
                input(type="text", name="imageUrl" value = editing ? product.imageUrl : "")#title
            .form-control
                label(for="price") Price
                input(type="number", name="price" step="0.01" value = editing ? product.price : "")#title
            .form-control
                label(for="description") Title 
                if editing 
                    textarea#desription(name="description", rows="5") #{product.description} 
                else 
                    textarea#desription(name="description", rows="5")  
            if editing
                button.btn(type="submit") Update Product 
            else
                button.btn(type="submit") Add Product 
            if editing 
                input(type = "hidden", value = product.id, name = "productId")